@model crimson_closet.Models.CartItems

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutUA.cshtml";
}

<h2>Create</h2>

<h4>CartItems</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
