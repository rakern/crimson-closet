@model crimson_closet.Models.CustOrder

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}

<div class="container mt-5">
    <h1>Edit Order</h1>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="ApplicationUserId" class="control-label"></label>
                    <input asp-for="ApplicationUserId" class="form-control" disabled/>
                    <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CheckOutDate" class="control-label"></label>
                    <input asp-for="CheckOutDate" class="form-control" disabled/>
                    <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReturnByDate" class="control-label"></label>
                    <input asp-for="ReturnByDate" class="form-control" />
                    <span asp-validation-for="ReturnByDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn button" />
                </div>
            </form>
        </div>
    </div>

   
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
