@model IEnumerable<crimson_closet.Models.CustOrder>

@{
    ViewData["Title"] = "ActiveOrders";
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}

<!-- Page Title
        ============================================= -->
<section id="page-title" class="">

    <div class="container clearfix">
        <h1 class="">Employee: All Active Orders</h1>
        <span class="">All orders prior to @DateOnly.FromDateTime(DateTime.Now)</span>
        <ol class="breadcrumb">
            <li class="breadcrumb-item "><a class="" asp-controller="Home" asp-action="AdminPortal">Admin Portal</a></li>
            <li class="breadcrumb-item text-black-50 active " aria-current="page">Active Orders</li>
        </ol>
    </div>

</section><!-- #page-title end -->
<!-- Content
============================================= -->
<section id="content" class="container">
    <div class="content-wrap">
        <table class="table make-jquery-table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        User
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Check-Out Date
                    </th>
                    <th>
                        Return By
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Complete
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CheckOutDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnByDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @{
                                //sets the parameters
                                var parms = new Dictionary<string, string>()
                        {
                        { "OrderId", item.Id.ToString() }
                        };

                                <form asp-action="CompleteOrder" class="m-0">
                                    <input asp-action="CompleteOrder" asp-all-route-data="parms" type="submit" value="Complete" class="btn button m-0" style="background-color: limegreen"/>
                                </form>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</section><!-- #content end -->
