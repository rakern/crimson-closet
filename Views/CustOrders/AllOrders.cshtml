@model IEnumerable<crimson_closet.Models.CustOrder>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}

<!-- Page Title
        ============================================= -->
<section id="page-title" class="">

    <div class="container clearfix">
        <h1 class="">Admin: All Orders</h1>
        <span class="">All orders prior to @DateOnly.FromDateTime(DateTime.Now)</span>
    </div>

</section><!-- #page-title end -->
<!-- Content
============================================= -->
<section id="content" class="container">
    <div class="content-wrap">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ApplicationUser)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CheckOutDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReturnByDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CheckOutDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnByDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</section><!-- #content end -->
